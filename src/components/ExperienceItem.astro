---
export interface props {
  title: string;
  description: string;
  link?: string;
  date: string;
}

const { title, description, link, date } = Astro.props;
---

<div
  class="absolute size-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white"
>
</div>
<time class="mb-1 text-sm font-normal leading-none text-gray">{date}</time>
<h3 class="text-lg font-medium text-blue-400 opacity-80">{title}</h3>
<p class="mb-4 text-base font-normal text-gray dark:text-gray-400">
  {description}
</p>
{
  link && (
    <a
      href={link}
      class="inline-flex items-center px-4 py-2 text-sm font-medium border rounded-lg hover:bg-gray-100focus:z-10 focus:ring-4 focus:outline-none focus:text-blue-500 bg-white/5 border-gray-300 hover:bg-white/10 hover:scale-105 transition"
    >
      Saber m√°s...{" "}
      <svg
        class="w-3 h-3 ms-2 rtl:rotate-180"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 14 10"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M1 5h12m0 0L9 1m4 4L9 9"
        />
      </svg>
    </a>
  )
}
