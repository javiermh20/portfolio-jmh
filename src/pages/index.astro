---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import Caurosel from "../components/Caurosel.astro";
import Container from "../components/Container.astro";
import DownloadIcon from "../icons/DownloadIcon.astro";
import Experience from "../components/Experience.astro";
import Projects from "../components/Projects.astro";
import Footer from "../components/Footer.astro";
import SocialPill from "../components/SocialPill.astro";
import GitHubIcon from "../icons/GitHubIcon.astro";
import MailIcon from "../icons/MailIcon.astro";
import ProjectIcon from "../icons/ProjectIcon.astro";
import LinkedInIcon from "../icons/LinkedInIcon.astro";
import WorkIcon from "../icons/WorkIcon.astro";
---

<Layout 
  {...Astro.props}
  title="Portfolio Javier Mejia - Desarrollador Móvil y Web", 
  description="Contactame para un posible desarrollo y cotización">
  <main class="px-2">
    <Container id="about" class="py-20 sm:px-20 lg:px-6">
      <h1
        class="dark:text-white text-3xl md:text-4xl lg:text-5xl font-bold flex justify-center flex-row gap-x-4 pb-10"
      >
        <img
          class="rounded-full size-12"
          src="/images/javier.jpg"
          alt="javiermh photo"
        />

        Hey, soy Javier Mejia
        <a
          href="https://www.linkedin.com/in/javier-mejia-751b62231"
          target="_blank"
          rel="noopener"
          class="flex justify-center items-center hover:scale-105 transition"
          ><Badge>Disponible para trabajar</Badge></a
        >
      </h1>
      <h2 class="text-xl lg:text-2xl text-wrap justify-center items-center gap-x-4 lg:px-0">
        <span class="opacity-80 text-blue-400">
          Desarrollador Móvil y Web 📱🌐</span
        > dedicado a la creación de sistemas y soluciones para tu empresa. Desde Guanajuato,
        México. Me especializo en desarrollar aplicaciones móviles multiplataforma
        con Flutter 🚀, así como aplicaciones nativas para <span
          class="opacity-80 text-green-400"
        >
          Android 📲</span
        > e iOS 🍏.
      </h2>
      <nav class="flex gap-4 mt-6 flex-wrap items-center">
        <SocialPill href="/files/cv_javier_mejia.pdf" download="cv_javier_mejia.pdf">
          <DownloadIcon class="size-6"/>
          Descargar Curriculum
        </SocialPill>
        <SocialPill href="https://www.linkedin.com/in/javier-mejia-751b62231">
          <LinkedInIcon class="size-6"/>
          LinkdIn
        </SocialPill>
        <SocialPill href="https://github.com/javiermh20">
          <GitHubIcon class="size-6"/>
          GitHub
        </SocialPill>
        <SocialPill href="mailto:javiermejiah20@gmail.com">
          <MailIcon class="size-6"/>
          javiermejiah20@gmail.com
        </SocialPill>
      </nav>
    </Container>

    <Container class="mb-20">
      <Caurosel />
    </Container>

    <Container id="experience" class="pb-4 sm:px-20 lg:px-0">
      <h2 class="text-2xl font-semibold mb-4 flex gap-x-3 items-center">
        <WorkIcon class="size-7"/> Experiencia laboral</h2>
      <Experience />
    </Container>
    
    <Container id="projects" class="pb-2 sm:px-20 lg:px-0">
      <h2 class="text-2xl font-semibold mb-4 flex gap-x-3 items-center">
        <ProjectIcon class="size-7"/> Proyectos</h2>
      <Projects />
    </Container>

    <Footer />
  </main>
</Layout>
